<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="MyPersistenceUnit"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- Entity classes -->
		<class>com.example.myapp.crud.entity.Bar</class>
		<class>com.example.myapp.crud.entity.Foo</class>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:TestDb;create=true;shutdown=true" />

			<property name="javax.persistence.schema-generation.database.action"
				value="create" />
			<property name="javax.persistence.sql-load-script-source" value="POPULATE-DATABASE.SQL" 
				/>

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
		</properties>

	</persistence-unit>
</persistence>